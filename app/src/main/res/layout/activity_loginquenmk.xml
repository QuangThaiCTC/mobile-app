<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingTop="150dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_black"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="Logo App" />

    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/inter_black"
        android:text="Nhập mã OTP đã gửi vào số điện thoại để đặt lại mật khẩu"
        android:textColor="@color/primary"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:layout_marginBottom="30dp"
        android:textColorHint="@color/primary_tr40"
        android:padding="10dp"
        android:layout_marginHorizontal="50dp"
        android:hint="Mã OTP"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="@color/primary"
        />

    <Button
        android:id="@+id/btn_Tieptuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:background="@drawable/button_main"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_extra_bold"/>

    <TextView
        android:id="@+id/btn_QuenMK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_medium"
        android:text="@string/btn_QuenMK" />

    <TextView
        android:id="@+id/btn_BoQua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_medium"
        android:text="@string/btn_BoQua" />
</LinearLayout>