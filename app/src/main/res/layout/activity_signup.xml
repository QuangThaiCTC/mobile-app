<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingTop="100dp"
    android:paddingHorizontal="50dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_black"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Logo App" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:text="Bạn chưa có tài khoản\nNhập thông tin để tiếp tục" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:layout_marginBottom="30dp"
        android:textColorHint="@color/primary_tr40"
        android:padding="10dp"
        android:hint="Họ và tên"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="@color/primary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:layout_marginBottom="30dp"
        android:textColorHint="@color/primary_tr40"
        android:padding="10dp"
        android:hint="Số đện thoại"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="@color/primary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:layout_marginBottom="30dp"
        android:textColorHint="@color/primary_tr40"
        android:padding="10dp"
        android:hint="Mật khẩu"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="@color/primary"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_main"
        android:text="Đăng ký"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_extra_bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_medium"
        android:text="@string/btn_QuenMK" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_medium"
        android:text="@string/btn_BoQua" />


</LinearLayout>